<%- include('partials/headerAdmin'); -%>

    <head>

        <title>Orders</title>
    </head>

    <body>
        <h1>All Orders</h1>

        <% if (orders.length===0) { %>
            <p>No orders found.</p>
            <% } else { %>
                <table>
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>username</th>
                            <th>Order Date</th>
                            <th>Total Amount</th>
                            <th>Order Details</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach(order=> { %>
                            <tr>
                                <td>
                                    <%= order._id %>
                                </td>
                                <td>
                                    <%= order.userId.username %>
                                </td>
                                <td>
                                    <%= order.order_date.toLocaleDateString() %>
                                </td>
                                <td>$<%= order.total_amount.toFixed(2) %>
                                </td>
                               

                                <td >
                                    <table>
                                        <thead>
                                            <tr>
                                                <th>Product</th>
                                                <th>Quantity</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% order.items.forEach(item=> { %>
                                                <tr>
                                                    <td>
                                                        <%= item.productId.name %>
                                                    </td>
                                                    <td>
                                                        <%= item.quantity %>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </td>
                                <td>
                                    <%= order.status %>
                                </td>
                                <td>
                                    <form action="/update-status/<%= order._id %>" method="post" class="MarkasReady">
                                        <button type="submit">Mark as Ready</button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
                <% } %>

    </body>

    <%- include('partials/footer'); -%>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </head>

  <body>
    <nav class="nav">
      <h2>Spiritual Drinks Shop</h2>
      <ul>
        <!-- Check if the user is an admin -->
        <% if (admin) { %>
        <!-- Admin navigation -->
        <li id="userManage"><a href="/admin/usermanagment">User Management</a></li>
        <li id="productManage"><a href="/admin/inventory">Inventory Management</a></li>
        <li id="orderManage"><a href="/admin/allorders">Order Management</a></li>
        <li id="revenueManage"><a href="/admin/revenue">Revenue Management</a></li>
        <li id="reviewManage"><a href="/admin/reviews">Reviews Management</a></li>
        <li id="profileManage">
          <a href="/admin/profile"><i class="fa-regular fa-user"></i></a>
        </li>

        <!-- Display admin role -->
        <% if(admin.role=='mainadmin' ){ %>
        <h5 style="text-align: center">Main Admin</h5>
        <% }else{ %>
        <h5 style="text-align: center">Worker</h5>
        <% } %>

        <!-- Logout -->
        <li><a href="/admin/logout">Logout</a></li>
        <% } else { %>
        <li id="nohover"><a href="/admin">Login</a></li>
        <% } %>
      </ul>
    </nav>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        window.addEventListener("scroll", function () {
          var scrollPosition = window.scrollY;
          var scrollRange = 60; // Set your scroll range here

          // Check if the scroll position is beyond the scroll range
          if (scrollPosition > scrollRange) {
            document.body.classList.add("scrolled");
          } else {
            document.body.classList.remove("scrolled");
          }
        });
      });
    </script>
  </body>
</html>

<%- include('partials/header'); -%>

<head>
  <title>Spiritual Drinks Shop</title>
</head>

<!-- Video container with overlay and shop now button -->
<div class="videoContainer">
  <video src="/video.mp4" autoplay muted playsinline loop></video>
  <div class="text-overlay">
    <p>Spiritual Drinks Shop</p>
    <button id="shopNow">Shop Now</button>
  </div>
</div>

<!-- Introduction to the Spiritual Drinks Shop -->
<div class="spiritual-explanation">
  <h2>Welcome to our Spiritual Drinks Shop</h2>
  <p>
    Step into a realm of tranquility and rejuvenation. Our Spiritual Drinks Shop offers a unique collection of beverages that are crafted to nourish
    not just the body, but also the soul.
  </p>
  <p>
    Immerse yourself in a selection of drinks inspired by ancient recipes, infused with natural herbs, and designed to bring a sense of peace and
    balance to your life.
  </p>
  <p>
    Each sip is a journey towards relaxation and mindfulness. Whether you seek a calming herbal tea, an energizing elixir, or a refreshing potion, our
    offerings are curated to elevate your spirit.
  </p>
  <p>
    Explore the harmony of flavors and the calming energy of our drinks. Embrace the serenity and let each beverage become a ritual for your
    well-being.
  </p>
</div>

<!-- Best Seller section -->
<div class="best-sellers">
  <h2>Best Seller</h2>
  <!-- Loop through bestSellerItems to display best-selling items -->
  <% bestSellerItems.forEach(function(item) { %>
  <div class="best-seller-item">
    <!-- Display item image, name, and price -->
    <img class="best-seller-image" src="/<%= item.image %>" />
    <h3><%= item.name %></h3>
  </div>
  <% }); %>
</div>

<!-- Category list section -->
<div class="category-list">
  <h2>Categories</h2>
  <!-- Accessories  -->
  <ul class="category-items">
    <li class="category-item">
      <img class="category-image" src="accession.jpg" alt="ACCESSORIES" data-cat="accession" onclick="goTo(event)" />
      <div class="textOverlay">
        <p>ACCESSORIES</p>
      </div>
    </li>
    <!-- Beer  -->
    <li class="category-item">
      <img class="category-image" src="beers.jpg" alt="BEER" data-cat="beer" onclick="goTo(event)" />
      <div class="textOverlay">
        <p>BEER</p>
      </div>
    </li>
    <!-- Wine  -->
    <li class="category-item">
      <img class="category-image" src="winecat.jpg" alt="WINE" data-cat="wine" onclick="goTo(event)" />
      <div class="textOverlay">
        <p>WINE</p>
      </div>
    </li>
    <!-- Alcohol -->
    <li class="category-item">
      <img class="category-image" src="alcohol.jpg" alt="ALCOHOL" data-cat="alcohol" onclick="goTo(event)" />
      <div class="textOverlay">
        <p>ALCOHOL</p>
      </div>
    </li>
  </ul>
</div>

<!-- Review container section -->
<div class="review-container">
  <h2>Reviews</h2>
  <!-- Loop through reviews to display user reviews -->
  <% reviews.forEach(function(review) { %>
  <div class="review">
    <!-- Author  -->
    <p>Author: <%= review.author %></p>
    <!-- Title  -->
    <p><%= review.title %></p>
    <!-- Rating  -->
    <p>Rating: <%= review.rating %></p>
    <p><%= review.body %></p>
    <!-- Date  -->
    <p>Date: <%= review.date.toLocaleDateString() %></p>
  </div>
  <% }); %>

  <!-- Link to see all reviews -->
  <a href="/reviews" class="see-all">See All Reviews</a>
</div>

<script>
  // Function to navigate to the '/order' path when the "Shop Now" button is clicked
  function goToPath() {
    window.location.href = "/order";
  }

  // Attach the function to the button's click event
  document.getElementById("shopNow").addEventListener("click", goToPath);

  // Function to navigate to the path based on the clicked category
  function goTo(e) {
    const category = event.target.getAttribute("data-cat");
    window.location.href = `/order/category/${category}`;
  }
</script>

<%- include('partials/footer'); -%>

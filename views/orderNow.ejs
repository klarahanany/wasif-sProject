<%- include('partials/header'); -%>

    <header>
        <h1>Spiritual Drinks Menu</h1>
    </header>
    
    <main>
        <h2>Menu</h2>
        <ul>
            <% drinks.forEach((drink) => { %>
                <li class="product-card">
                    <h3 class="product-title"><%= drink.name %></h3>
                    <p class="product-description"><%= drink.description %></p>
                    <p class="product-price">Price: $<%= drink.price.toFixed(2) %></p>
                    <form class="drinkData" action="/order/add-to-cart" method="post">
                        <input type="hidden" name="drinkId" value="<%= drink.id %>">
                        <label for="quantity">Quantity</label>
                        <input type="number" id="quantity" name="quantity" min="1" value="1" required>
                        <button class="add-to-cart" type="submit">Add to Cart</button>
                    </form>
                </li>
            <% }); %>
        </ul>
        
        <a href="/order/cart">Go to Cart</a> <!-- Link to the cart page -->
    </main>


    <%- include('partials/footer'); -%>
